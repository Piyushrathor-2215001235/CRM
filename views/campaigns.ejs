<%- include('partials/header') %>

<div class="container">
    <div class="header-section">
        <h1>Campaigns Management</h1>
        <a href="/campaigns/new" class="btn btn-primary">Add New Campaign</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (campaigns && campaigns.length > 0) { %>
                    <% campaigns.forEach(function(campaign) { %>
                        <tr>
                            <td><%= campaign.name %></td>
                            <td><%= campaign.type %></td>
                            <td><span class="badge badge-<%= campaign.status === 'Active' ? 'success' : campaign.status === 'Inactive' ? 'secondary' : campaign.status === 'Draft' ? 'warning' : 'info' %>"><%= campaign.status %></span></td>
                            <td><%= campaign.startDate ? campaign.startDate.toLocaleDateString() : 'N/A' %></td>
                            <td><%= campaign.endDate ? campaign.endDate.toLocaleDateString() : 'N/A' %></td>
                            <td><%= campaign.createdAt ? campaign.createdAt.toLocaleDateString() : 'N/A' %></td>
                            <td class="actions">
                                <a href="/campaigns/edit/<%= campaign._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form action="/campaigns/<%= campaign._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this campaign?')">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">No campaigns found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %> 