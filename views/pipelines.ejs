<%- include('partials/header') %>

<div class="container">
    <div class="header-section">
        <h1>Pipelines Management</h1>
        <a href="/pipelines/new" class="btn btn-primary">Add New Pipeline</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Stages</th>
                    <th>Number of Leads</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (pipelines && pipelines.length > 0) { %>
                    <% pipelines.forEach(function(pipeline) { %>
                        <tr>
                            <td><%= pipeline.name %></td>
                            <td><%= pipeline.owner %></td>
                            <td><%= pipeline.stages ? pipeline.stages.join(', ') : 'N/A' %></td>
                            <td><span class="badge badge-info"><%= pipeline.leads ? pipeline.leads.length : 0 %></span></td>
                            <td><%= pipeline.createdAt ? pipeline.createdAt.toLocaleDateString() : 'N/A' %></td>
                            <td class="actions">
                                <a href="/pipelines/edit/<%= pipeline._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form action="/pipelines/<%= pipeline._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this pipeline?')">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No pipelines found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %> 