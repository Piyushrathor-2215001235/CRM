<%- include('../partials/header') %>

<div class="container">
    <div class="header-section">
        <h1>Manage Leads</h1>
        <div class="header-actions">
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            <a href="/leads/new" class="btn btn-primary">Add New Lead</a>
        </div>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Company</th>
                    <th>Source</th>
                    <th>Assigned To</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (leads && leads.length > 0) { %>
                    <% leads.forEach(function(lead) { %>
                        <tr>
                            <td><%= lead.name %></td>
                            <td><%= lead.email %></td>
                            <td><%= lead.phone %></td>
                            <td><%= lead.company %></td>
                            <td><%= lead.source %></td>
                            <td><%= lead.assignedTo ? lead.assignedTo.name : 'Unassigned' %></td>
                            <td><span class="badge badge-<%= lead.status === 'New' ? 'info' : lead.status === 'Contacted' ? 'warning' : lead.status === 'Qualified' ? 'primary' : lead.status === 'Proposal' ? 'secondary' : lead.status === 'Negotiation' ? 'warning' : lead.status === 'Closed Won' ? 'success' : 'danger' %>"><%= lead.status %></span></td>
                            <td><%= lead.createdAt ? lead.createdAt.toLocaleDateString() : 'N/A' %></td>
                            <td class="actions">
                                <a href="/leads/edit/<%= lead._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form action="/leads/<%= lead._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this lead?')">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center">No leads found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %> 